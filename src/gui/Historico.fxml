<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" prefHeight="-1.0" prefWidth="-1.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.HistoricoController">
    <children>
        <Label text="Extrato / Histórico">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <HBox spacing="10.0" VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tabelaHistorico" HBox.hgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colunaData" text="Data" />
                        <TableColumn fx:id="colunaDescricao" text="Descrição" />
                        <TableColumn fx:id="colunaValor" text="Valor" />
                        <TableColumn fx:id="colunaTipo" text="Tipo" />
                        <TableColumn fx:id="colunaCategoria" text="Categoria" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <VBox spacing="10.0" alignment="TOP_CENTER">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleRemoverSelecionado" text="Remover Selecionado" />
                        <Button mnemonicParsing="false" onAction="#handleEditarSelecionado" text="Editar Selecionado" />
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>