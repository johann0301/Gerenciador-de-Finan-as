<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" prefHeight="-1.0" prefWidth="-1.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.RelatoriosController" stylesheets="@style.css">
    <children>
        <Label text="Relatórios Estatísticos" styleClass="header-label">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button mnemonicParsing="false" onAction="#handleRelatorioCategoria" text="Gastos por Categoria" styleClass="button" />
                <Button mnemonicParsing="false" onAction="#handleRelatorioBalanco" text="Balanço do Mês" styleClass="button" />
                <Button mnemonicParsing="false" onAction="#handleRelatorioMaiorDespesa" text="Maior Despesa" styleClass="button" />
                <Button mnemonicParsing="false" onAction="#handleRelatorioMedia" text="Média Diária" styleClass="button" />
            </children>
        </HBox>

        <TextArea fx:id="areaDeRelatorio" editable="false" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>