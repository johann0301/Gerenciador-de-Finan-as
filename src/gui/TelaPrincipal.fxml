<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.TelaPrincipalController" stylesheets="@style.css">

    <top>
        <VBox alignment="CENTER" prefHeight="80.0" prefWidth="100.0" spacing="5.0" styleClass="header-panel" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="labelSaldo" styleClass="subheader-label" text="Carregando Saldo..." />
                <Label fx:id="labelOrcamento" text="Carregando Orçamento..." styleClass="label" />
                <Label fx:id="labelAlertas" text="Carregando Alertas..." styleClass="label" style="-fx-text-fill: #f38ba8;" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>

    <left>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefWidth="240.0" styleClass="sidebar" vbarPolicy="AS_NEEDED" BorderPane.alignment="CENTER">
            <content>
                <VBox alignment="TOP_CENTER" minHeight="500.0" spacing="10.0" styleClass="sidebar">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleMenuAdicionarReceita" prefHeight="35.0" prefWidth="200.0" text="Adicionar Receita" styleClass="menu-button" />
                        <Button mnemonicParsing="false" onAction="#handleMenuAdicionarDespesa" prefHeight="35.0" prefWidth="200.0" text="Adicionar Despesa" styleClass="menu-button" />
                        <Button fx:id="handleMenuVerHistorico" mnemonicParsing="false" onAction="#handleMenuVerHistorico" prefHeight="35.0" prefWidth="200.0" text="Extrato/Histórico" styleClass="menu-button" />
                        <Button mnemonicParsing="false" onAction="#handleMenuBuscarTransacoes" prefHeight="35.0" prefWidth="200.0" text="Buscar Transações" styleClass="menu-button" />
                        <Button mnemonicParsing="false" onAction="#handleMenuRelatoriosEstatisticos" prefHeight="35.0" prefWidth="200.0" text="Relatórios Estatísticos" styleClass="menu-button" />
                        <Button mnemonicParsing="false" onAction="#handleMenuDefinirOrcamentoMensal" prefHeight="35.0" prefWidth="200.0" text="Definir Orçamento Mensal" styleClass="menu-button" />
                        <Button mnemonicParsing="false" onAction="#handleMenuGerenciarTransacoesRecorrentes" prefHeight="35.0" prefWidth="200.0" text="Transações Recorrentes" styleClass="menu-button" />
                        <Button mnemonicParsing="false" onAction="#handleMenuVerSugestoesInteligentes" prefHeight="35.0" prefWidth="200.0" text="Sugestões Inteligentes" styleClass="menu-button" />
                        <Button mnemonicParsing="false" onAction="#handleMenuBackupRestauracao" prefHeight="35.0" prefWidth="200.0" text="Backup e Restauração" styleClass="menu-button" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" top="20.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </left>

    <center>
        <AnchorPane fx:id="areaDeConteudo" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #1e1e2e;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="20.0" layoutY="20.0" text="Bem-vindo! Selecione uma opção no menu." textFill="#888888" />
            </children>
        </AnchorPane>
    </center>

</BorderPane>