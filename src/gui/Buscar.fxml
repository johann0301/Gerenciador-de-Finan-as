<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" prefHeight="-1.0" prefWidth="-1.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.BuscarController" stylesheets="@style.css">
    <children>
        <Label text="Buscar Transações" styleClass="header-label">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TextField fx:id="campoCategoria" maxWidth="300.0" promptText="Filtrar por Categoria" />
        <TextField fx:id="campoDataInicio" maxWidth="300.0" promptText="(dd/MM/yyyy) Data Início" />
        <TextField fx:id="campoDataFim" maxWidth="300.0" promptText="(dd/MM/yyyy) Data Fim" />

        <Button mnemonicParsing="false" onAction="#handleBuscar" text="Buscar" styleClass="button, primary" />

        <TableView fx:id="tabelaResultados" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colunaData" text="Data" />
                <TableColumn fx:id="colunaDescricao" text="Descrição" />
                <TableColumn fx:id="colunaValor" text="Valor" />
                <TableColumn fx:id="colunaTipo" text="Tipo" />
                <TableColumn fx:id="colunaCategoria" text="Categoria" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>