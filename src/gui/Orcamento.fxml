<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" prefHeight="-1.0" prefWidth="-1.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.OrcamentoController">
    <children>
        <Label text="Definir Orçamento Mensal">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Label fx:id="labelOrcamentoAtual" text="Atual: R$ 0,00">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <TextField fx:id="campoNovoOrcamento" maxWidth="300.0" promptText="Digite o novo valor" />

        <Button mnemonicParsing="false" onAction="#handleSalvarOrcamento" text="Salvar Orçamento" />
    </children>
</VBox>