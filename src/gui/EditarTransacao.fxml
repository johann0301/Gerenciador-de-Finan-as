<?xml version="1.0" encoding="UTF-8"?>



<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" prefHeight="-1.0" prefWidth="-1.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.EditarTransacaoController" stylesheets="@style.css">
    <children>
        <Label text="Editar Transação" styleClass="header-label">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TextField fx:id="campoDescricao" maxWidth="300.0" promptText="Descrição" />
        <TextField fx:id="campoValor" maxWidth="300.0" promptText="Valor" />
        <TextField fx:id="campoCategoria" maxWidth="300.0" promptText="Categoria" />
        <TextField fx:id="campoData" maxWidth="300.0" promptText="Data (dd/MM/yyyy)" />

        <Button mnemonicParsing="false" onAction="#handleSalvarEdicao" text="Salvar Alterações" styleClass="button, primary" />
    </children>
</VBox>