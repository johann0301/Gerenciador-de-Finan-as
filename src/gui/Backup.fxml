<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" prefHeight="-1.0" prefWidth="-1.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.BackupController" stylesheets="@style.css">
    <children>
        <Label text="Backup e Restauração" styleClass="header-label">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Button mnemonicParsing="false" onAction="#handleCriarBackup" prefWidth="250.0" style="-fx-font-size: 14px;" text="Criar Novo Backup Agora" styleClass="button, primary" />

        <Label text="Backups Existentes (.json):" styleClass="label" />

        <ListView fx:id="listaBackups" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />

        <Button mnemonicParsing="false" onAction="#handleRestaurar" prefWidth="250.0" text="Restaurar Selecionado" styleClass="button" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>