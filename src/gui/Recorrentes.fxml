<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" prefHeight="-1.0" prefWidth="-1.0" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.RecorrentesController">
    <children>
        <Label text="Transações Recorrentes">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <TextField fx:id="campoDescricao" promptText="Descrição" prefWidth="250.0" />
                <TextField fx:id="campoValor" promptText="Valor" prefWidth="150.0" />
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <TextField fx:id="campoDia" promptText="Dia (1-31)" prefWidth="100.0" />
                <TextField fx:id="campoCategoria" promptText="Categoria" prefWidth="150.0" />
                <TextField fx:id="campoTipo" promptText="Tipo" prefWidth="150.0" />
            </children>
        </HBox>

        <Button mnemonicParsing="false" onAction="#handleAdicionar" text="Adicionar Recorrente" />

        <TableView fx:id="tabelaRecorrentes" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colunaDia" text="Dia" />
                <TableColumn fx:id="colunaDescricao" text="Descrição" />
                <TableColumn fx:id="colunaValor" text="Valor" />
                <TableColumn fx:id="colunaTipo" text="Tipo" />
                <TableColumn fx:id="colunaCategoria" text="Categoria" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>